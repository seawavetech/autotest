{
  "compilerOptions": {
    // 编译生成的模块系统代码
//    "module": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    // 指定ecmascript的目标版本
    "target": "esnext",
    // 禁止隐式any类型
    "noImplicitAny": false,
    "outDir": "./dist",
    "sourceMap": false,
    // 是否允许出现js
    "allowJs": true,
    "newLine": "LF",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "bin/**/*",
    "config/**/*",
    "routes/**/*",
    "views/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}