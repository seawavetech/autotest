{
  "extends": "@strapi/typescript-utils/tsconfigs/server",
  "compilerOptions": {
    "esModuleInterop":true,
    "outDir": "dist",
    "rootDir": ".",
    "lib": [
      "dom",
      "es5",
      "es6",
      "esnext"
    ],
  },
  "include": [
    "./",
    "./**/*.ts",
    "./**/*.js",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules/",
    "build/",
    "dist/",
    ".cache/",
    ".tmp/",
    "src/admin/",
    "**/*.test.*",
    "src/plugins/**"
  ]
}
